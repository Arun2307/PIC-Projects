#include<pic.h>
void delay(int count)
{
	while(count--)
	{
	}
		
}	
int main()
{
	TRISA=0x00;
	TRISB=0x00;
	TRISC=0x00;
	TRISD=0x00;
	TRISE=0x00;
	PORTA=0x00;
	PORTB=0x00;
	PORTC=0x00;
	PORTD=0x00;
	PORTE=0x00;
	int i,j,PORT[3]={0x01,0x02,0x04};
	while(1)
	{
		for(i=0,j=2;i<2,j>=0;i++,j--)
		{
			PORTC=PORT[i],PORTD=PORT[j];
			delay(50000);
		}	
	}
}

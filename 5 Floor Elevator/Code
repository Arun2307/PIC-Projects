#include<pic.h>
int main()
{
	TRISA=0x1F;
	TRISB=0x1F;
	TRISC=0x00;
	PORTC=0X00;
	TRISD=0x00;
	PORTD=0X00;
	ANSEL=0x00;
	ANSELH=0x00;
	while(1)
	{
		if(RB0==1)//5 FLOOR
		{
			RD0=1;
			RC0=1;
		}
		if(RA0==1)
		{
			RD0=0;
			RC0=0;
			while(RA0==1);
		}
		if(RB1==1)//4 FLOOR
		{
			RD0=1;
			RC1=1;
		}
		if(RA1==1)
		{
			RD0=0;
			RC1=0;
			while(RA1==1);
		}
		if(RB2==1)//3 FLOOR
		{
			RD0=1;
			RC2=1;
		}	
		if(RA2==1)
		{
			RD0=0;
			RC2=0;
			while(RA2==1);
		}
		if(RB3==1)//2 FLOOR
		{
			RD0=1;
			RC3=1;
		}	
		if(RA3==1)
		{
			RD0=0;
			RC3=0;
			while(RA3==1);
		}
		if(RB4==1)//1 FLOOR
		{
			RD0=1;
			RC4=1;
		}	
		if(RA4==1)
		{
			RD0=0;
			RC4=0;
			while(RA4==1);
		}
	}
}

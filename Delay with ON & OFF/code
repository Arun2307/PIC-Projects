#include<pic.h>
void delay(int count)
{
	while(count--)
	{
	}	
}
int main()
{
	TRISA=0x00;
	TRISB=0x00;
	TRISC=0x00;
	TRISD=0x00;
	TRISE=0x00;
	PORTA=0x00;
	PORTB=0x00;
	PORTC=0x00;
	PORTD=0x00;
	PORTE=0x00;
	int i,PORT[9]={0x00,0x01,0x03,0x07,0x0F,0x1F,0x3F,0x7F,0xFF};
	while(1)
	{
		for(i=0;i<9;i++)
		{
			PORTA=PORT[i];
			delay(10000);
		}
		for(i=0;i<9;i++)
		{
			PORTB=PORT[i];
			delay(10000);
		}
		for(i=0;i<9;i++)
		{
			PORTC=PORT[i];
			delay(10000);
		}
		for(i=0;i<9;i++)
		{
			PORTD=PORT[i];
			delay(10000);
		}	
		for(i=0;i<4;i++)
		{
			PORTE=PORT[i];
			delay(10000);
		}
		for(i=3;i>=0;i--)
		{
			PORTE=PORT[i];
			delay(10000);
		}
		for(i=8;i>=0;i--)
		{
			PORTD=PORT[i];
			delay(10000);
		}
		for(i=8;i>=0;i--)
		{
			PORTC=PORT[i];
			delay(10000);
		}
		for(i=8;i>=0;i--)
		{
			PORTB=PORT[i];
			delay(10000);
		}
		for(i=8;i>=0;i--)
		{
			PORTA=PORT[i];
			delay(10000);
		}			
	}
}

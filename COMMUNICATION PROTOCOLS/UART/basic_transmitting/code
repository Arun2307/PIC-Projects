#include<pic.h>
void delay(int count)
{
	while(count--)
	{
	}
}
void transmit2(char *value2)
{
	while(*value2)
	{	
		TXREG=*value2;
		while(TXIF==0);
		TXIF=0;
		value2++;
	//	delay(40000);
	}
}
void transmit(char value)
{
	TXREG=value;
	while(TXIF==0);
	TXIF=0;
}
void receiver() 
{
	while(RCIF==0); 
 	int RX=RCREG;   
 	RCIF=0;
}
int main()
{
	TRISC=0X80;
	PORTC=0X00;
	TXSTA=0X26;
	RCSTA=0X90;
	SPBRG=25;
	ANSEL=0X00;
	ANSELH=0X00;
	while(1)
	{
		transmit2("ARUN");
		delay(50000);

		
		/*without string
		transmit('A');
		delay(10000);
		transmit('R');
		delay(10000);
		transmit('U');
		delay(10000);
		transmit('N');
		delay(10000);*/
	}
